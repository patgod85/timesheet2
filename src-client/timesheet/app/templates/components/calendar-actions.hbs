{{yield}}

<table class="table table-responsive table-bordered calendar-actions">
    <thead>
    <tr>
        <th>Working days</th>
        <th>Day value</th>
        <th>Shifts</th>
        <th>Nonworking days</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            {{#if showButtons}}
                <ul class="events_agenda">
                    {{#each event_types as |event|}}
                        <li><div class="event event_{{event.id}}"></div> - <button type="button" {{ action "setEvent" event.id on="click" }}>{{event.name}}</button></li>
                    {{/each}}
                </ul>
            {{/if}}
        </td>
        <td>
            {{#if showButtons}}
                <label>
                    {{input value=value type="text"}}
                </label>
                <br/>
                <button type="button" {{ action "setValue" event.id on="click" }}>Apply</button>
                <br/>
                <i>Example: 1.25</i>
            {{/if}}
        </td>
        <td>
            {{#if showButtons}}
                <ul class="events_agenda">
                    <li><div class="event event_shift event_shift_1">1</div> - <button type="button" {{ action "setShift" 1 on="click" }}>Shift 1</button></li>
                    <li><div class="event event_shift event_shift_2">2</div> - <button type="button" {{ action "setShift" 2 on="click" }}>Shift 2</button></li>
                    <li><div class="event event_shift event_shift_3">3</div> - <button type="button" {{ action "setShift" 3 on="click" }}>Shift 3</button></li>
                </ul>
            {{/if}}
        </td>
        <td>
            <ul class="events_agenda ">
                <li><div class="event event_we"></div> - <button type="button" {{ action "setNonworkingDay" "we" on="click" }}>Weekend</button></li>
                <li><div class="event event_ph"></div> - <button type="button" {{ action "setNonworkingDay" "ph" on="click" }}>Public holiday</button></li>
            </ul>
        </td>
        <td>
            <p>
                <button type="button" {{ action "onUnpick" on="click" }}>Unpick dates</button>
            </p>
            <p>
                <button type="button" {{ action "onClearAll" on="click" }} class="danger_button">&otimes; Clear data</button>
            </p>
            <h4>Pick dates using an algorithm:</h4>
            <p>
                {{input value=pickValue type="number" class="short_input_70"}}
                per
                {{input value=pickGap type="number" class="short_input_70"}}
                *
                {{input value=pickQuantity type="number" class="short_input_70"}}
                <button type="button" {{ action "onPickWithAlgorithm" on="click" }}>Pick dates</button>
            </p>
        </td>
    </tr>
    </tbody>
</table>
<div>
    <strong>Checked dates:</strong>
    <ul>
        {{#each sections as |section|}}
            <li>Section: {{section.sectionId}}</li>
            {{#each section.days as |day|}}
                <li> - {{day.date}} - {{#each day.events as |event|}}{{json event.summary}}{{/each}}</li>
            {{/each}}
        {{/each}}
    </ul>
</div>
