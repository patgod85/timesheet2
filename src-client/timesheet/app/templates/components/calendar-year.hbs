<div class="calendar_options">
    {{drop-down content=years onChange=(action "changeYear") selectedValue=year }}
    {{drop-down content=months onChange=(action "changeMonth") }}
</div>

<div class="clearfix"></div>

{{#each monthSections as |m|}}
    {{calendar-month month=m.month year=year checkDateAction=(action 'checkDate') checkedDates=m.days events=events nonWorkingOnly=nonWorkingOnly sectionId=m.sectionId}}
{{/each}}

<div class="clearfix"></div>

{{calendar-actions sections=monthSections events=events showButtons=showButtons event_types=event_types onUpdate=(action 'onUpdate') onUncheck=(action 'onUncheck') }}