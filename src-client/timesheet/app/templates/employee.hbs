{{bread-crumbs}}

{{#ivy-tabs on-select=(action (mut selectedIndex)) selected-index=selectedIndex as |tabs|}}
    {{#tabs.tablist as |tablist|}}
        {{#tablist.tab}}Calendar{{/tablist.tab}}
        {{#tablist.tab}}Report{{/tablist.tab}}
        {{#tablist.tab}}Details{{/tablist.tab}}
    {{/tabs.tablist}}

    {{#tabs.tabpanel}}
        {{calendar-year y=2016 calendars=model.employee.calendars refreshAction="refresh" model=model.employee showButtons=true event_types=model.events}}
    {{/tabs.tabpanel}}

    {{#tabs.tabpanel}}
        {{employee-report calendars=model.employee.calendars employee=model.employee events=model.events}}
    {{/tabs.tabpanel}}

    {{#tabs.tabpanel}}
        <div class="aright pull-right">
            <button type="button" class="btn btn-success" {{ action "submit" model.employee on="click" }}>Save</button>
        </div>

        <ul>
            <li>
                Name: {{input value=model.employee.name}}
            </li>
            <li>
                Surname: {{input value=model.employee.surname}}
            </li>
            <li>
                Position: {{input value=model.employee.position}}
            </li>
            <li>
                First working day: {{bootstrap-datepicker value=model.employee.work_start format="yyyy-mm-dd" todayHighlight=true autoclose=true weekStart=1}}
            </li>
        </ul>


    {{/tabs.tabpanel}}
{{/ivy-tabs}}


